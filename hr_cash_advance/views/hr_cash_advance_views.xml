<openerp>
<data>
<record id="hr_cash_advance_vie w_search" model="ir.ui.view">
    <field name="name">hr.cash_advance form</field>
    <field name="model">hr.cash_advance</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" />
            <field name="company_id" groups="base.group_multi_company" />
            <field name="employee_id" invisible="context.get('hide_employee',False)" />
            <field name="department_id" />
            <field name="manager_id" />
            <field name="job_id" />
            <field name="currency_id" groups="base.group_multi_currency" />
            <group name="dom_state" string="State">
                <filter
                            name="dom_draft"
                            string="Draft"
                            domain="[('state','=','draft')]"
                        />
                <filter
                            name="dom_confirm"
                            string="Waiting for Approval"
                            domain="[('state','=','confirm')]"
                        />
                <filter
                            name="dom_approve"
                            string="Waiting for Realization"
                            domain="[('state','=','approve')]"
                        />
                <filter
                            name="dom_open"
                            string="Waiting for Settlement"
                            domain="[('state','=','open')]"
                        />
                <filter name="dom_done" string="Done" domain="[('state','=','done')]" />
                <filter
                            name="dom_cancel"
                            string="Cancel"
                            domain="[('state','=','cancel')]"
                        />
            </group>
        </search>
    </field>
</record>

<record id="hr_cash_advance_view_tree" model="ir.ui.view">
    <field name="name">hr.cash_advance tree</field>
    <field name="model">hr.cash_advance</field>
    <field name="arch" type="xml">
        <tree>
            <field name="id" />
            <field name="name" />
            <field name="company_id" groups="base.group_multi_company" />
            <field name="employee_id" invisible="context.get('hide_employee',False)" />
            <field name="department_id" />
            <field name="manager_id" />
            <field name="job_id" />
            <field name="date_request" />
            <field name="type_id" />
            <field name="currency_id" groups="base.group_multi_currency" />
            <field name="amount_total" sum="Total Request" />
            <field name="amount_realized" sum="Total Realized" />
            <field name="amount_residual" sum="Total Residual" />
            <field name="amount_settled" sum="Total Settlement" />
            <field name="amount_due" sum="Total Due" />
            <field name="state" />
        </tree>
    </field>
</record>

<record id="hr_cash_advance_view_form" model="ir.ui.view">
    <field name="name">hr.cash_advance form</field>
    <field name="model">hr.cash_advance</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button
                            name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            confirm="Confirm cash advance. Are you sure?"
                            states="draft"
                        />
                <button
                            name="request_validation"
                            string="Request Validation"
                            class="oe_highlight"
                            attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                            confirm="Start approval process for this cash advance. Are you sure?"
                            type="object"
                        />
                <button
                            name="restart_validation"
                            string="Restart Validation"
                            confirm="Restart approval process for this cash advance. Are you sure?"
                            attrs="{'invisible': ['|',('review_ids', '=', []),('state','not in',['confirm'])]}"
                            type="object"
                        />
                <button
                            name="%(base_print_policy.base_print_document_action)d"
                            string="Print"
                            type="action"
                            icon="gtk-print"
                        />
                <button
                            name="%(base_cancel_reason.base_cancel_reason_wizard_action)d"
                            type="action"
                            string="Cancel"
                            attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}"
                            confirm="Cancel cash advance. Are you sure?"
                        />
                <button
                            name="%(base_terminate_reason.base_terminate_reason_wizard_action)d"
                            type="action"
                            string="Terminate"
                            attrs="{'invisible':['|',('state','!=','approve'),('terminate_ok','=',False)]}"
                            confirm="Terminate cash advance. Are you sure?"
                        />
                <button
                            name="action_restart"
                            type="object"
                            string="Restart"
                            confirm="Restart cash advance. Are you sure?"
                            states="cancel"
                        />
                <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="draft,confirm,approve,open"
                        />
            </header>
            <field name="need_validation" invisible="1" />
            <field name="validated" invisible="1" />
            <field name="rejected" invisible="1" />
            <div
                        class="alert alert-warning"
                        attrs="{'invisible': ['|', '|', '|',
                 ('validated', '=', True), ('state', 'not in', ['confirm']),
                 ('rejected', '=', True), ('review_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                <p><i class="fa fa-info-circle" />This Expense needs to be
                    validated.
                    <button
                                name="validate_tier"
                                string="Validate"
                                attrs="{'invisible': [('review_ids', '=', [])]}"
                                type="object"
                                class="oe_inline oe_button btn-success"
                                icon="terp-check"
                            />
                    <button
                                name="reject_tier"
                                string="Reject"
                                type="object"
                                class="btn-icon btn-danger"
                                icon="terp-gtk-stop"
                            />
                </p>
            </div>
            <div
                        class="alert alert-success"
                        attrs="{'invisible': ['|', '|', ('validated', '!=', True), ('state', 'not in', ['confirm']), ('review_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                <p><i class="fa fa-thumbs-up" /> Operation has been <b
                            >validated</b>!</p>
            </div>
            <div
                        class="alert alert-danger"
                        attrs="{'invisible': ['|', '|', ('rejected', '!=', True), ('state', 'not in', ['confirm']), ('review_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                <p><i class="fa fa-thumbs-down" /> Operation has been <b
                            >rejected</b>.</p>
            </div>
            <sheet>
                <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name" />
                        <h1>
                            <field name="name" class="oe_edit_only" />
                            <field name="display_name" class="oe_read_only" />
                        </h1>
                        <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                            <label
                                        for="cancel_reason_id"
                                        string="Cancellation reason:"
                                    />
                            <field name="cancel_reason_id" class="oe_inline" />
                        </h2>
                        <h2 attrs="{'invisible': [('state', '!=', 'terminate')]}">
                            <label
                                        for="terminate_reason_id"
                                        string="Termination reason:"
                                    />
                            <field name="terminate_reason_id" class="oe_inline" />
                        </h2>
                    </div>
                </div>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="company_id" groups="base.group_multi_company" />
                        <field
                                    name="employee_id"
                                    invisible="context.get('hide_employee',False)"
                                />
                        <field name="department_id" groups="base.group_system" />
                        <field name="manager_id" groups="base.group_system" />
                        <field name="job_id" groups="base.group_system" />
                    </group>
                    <group name="group_1_2">
                        <field name="date_request" />
                        <field name="type_id" />
                        <field
                                    name="allowed_product_categ_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                        <field
                                    name="allowed_product_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                        <field name="currency_id" groups="base.group_multi_currency" />
                    </group>
                </group>
                <notebook colspan="4">
                    <page name="detail" string="Advance Details">
                        <group name="detail_1" colspan="4" col="2">
                            <button
                                        name="%(hr_approve_cash_advance_view_action)d"
                                        type="action"
                                        string="Change Approved Price Unit/Quantity"
                                        attrs="{'invisible':[('state', '!=', 'confirm')]}"
                                    />
                        </group>
                        <group name="detail_2" colspan="4" col="2">
                            <field
                                        name="line_ids"
                                        colspan="2"
                                        nolabel="1"
                                        context="{'default_employee_id':employee_id, 'default_type_id': type_id}"
                                    >
                                <tree editable="top">
                                    <field name="sequence" widget="handle" />
                                    <field name="employee_id" invisible="1" />
                                    <field name="type_id" invisible="1" />
                                    <field
                                                name="product_id"
                                                domain="['|',('categ_id','in',parent.allowed_product_categ_ids[0][2]),('id','in',parent.allowed_product_ids[0][2])]"
                                            />
                                    <field name="price_unit" />
                                    <field name="approve_price_unit" force_save="1" />
                                    <field name="quantity" />
                                    <field name="approve_quantity" force_save="1" />
                                    <field
                                                name="allowed_uom_ids"
                                                widget="many2many_tags"
                                                invisible="1"
                                            />
                                    <field
                                                name="uom_id"
                                                domain="[('id','in',allowed_uom_ids)]"
                                                groups="product.group_uom"
                                            />
                                    <field name="price_subtotal" />
                                    <field name="advance_state" invisible="1" />
                                </tree>
                            </field>
                        </group>
                        <group name="detail_3" colspan="4" col="2">
                            <field name="amount_total" />
                            <field name="amount_realized" />
                            <field name="amount_residual" />
                            <field name="amount_settled" />
                            <field name="amount_due" />
                        </group>
                    </page>
                    <page
                                name="accounting"
                                string="Accounting Info"
                                groups="hr_cash_advance.cash_advance_accounting_setting_group"
                            >
                        <group
                                    name="accounting_1"
                                    colspan="4"
                                    col="2"
                                    string="Settings"
                                >
                            <field name="journal_id" />
                            <field name="employee_advance_payable_account_id" />
                            <field name="employee_advance_account_id" />
                        </group>
                        <group
                                    name="accounting_2"
                                    colspan="4"
                                    col="2"
                                    string="Accounting Entry"
                                >
                            <field name="move_id" />
                            <field name="employee_advance_payable_move_line_id" />
                            <field name="employee_advance_move_line_id" />
                        </group>
                    </page>
                    <page name="note" string="Notes">
                        <field name="note" />
                    </page>
                    <page string="Reviews" name="tier_validation">
                        <group
                                    name="tier_validation_1"
                                    colspan="4"
                                    col="2"
                                    groups="hr_cash_advance.cash_advance_show_tier_definition"
                                >
                            <field name="definition_id" />
                        </group>
                        <group name="tier_validation_2" colspan="4" col="2">
                            <field name="review_ids" readonly="1" />
                        </group>
                    </page>
                    <page name="policy" string="Policies" groups="base.group_system">
                        <group name="policy_1" colspan="4" col="2">
                            <field name="confirm_ok" />
                            <field name="restart_approval_ok" />
                            <field name="cancel_ok" />
                            <field name="terminate_ok" />
                            <field name="restart_ok" />
                        </group>
                    </page>
                    <page
                                name="log"
                                string="Logs"
                                groups="hr_cash_advance.cash_advance_show_log_group"
                            >
                        <group name="group_5" colspan="4" col="3">
                            <group name="group_log_1" colspan="4" col="3">
                                <field name="confirm_date" string="Confirmation" />
                                <field name="confirm_user_id" nolabel="1" />
                                <field name="approve_date" string="Approval" />
                                <field name="approve_user_id" nolabel="1" />
                                <field name="open_date" string="Open" />
                                <field name="open_user_id" nolabel="1" />
                                <field name="done_date" string="Finish" />
                                <field name="done_user_id" nolabel="1" />
                                <field name="cancel_date" string="Cancellation" />
                                <field name="cancel_user_id" nolabel="1" />
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field
                            name="message_follower_ids"
                            widget="mail_followers"
                            groups="base.group_user"
                        />
                <field name="message_ids" widget="mail_thread" />
            </div>
        </form>
    </field>
</record>

<record id="hr_my_cash_advance_action" model="ir.actions.act_window">
    <field name="name">My Cash Advances</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.cash_advance</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('employee_id.user_id.id','=',uid)]</field>
    <field
                name="context"
            >{'hide_employee': True, 'search_default_dom_draft':1, 'search_default_dom_confirm':1,'search_default_dom_approve':1,'search_default_dom_open':1,'readonly_by_pass': True}</field>
</record>

<menuitem
            id="hr_my_cash_advance_menu"
            name="My Cash Advances"
            parent="employee_cash_advance_root_menu"
            action="hr_my_cash_advance_action"
            sequence="1"
        />

<record id="hr_cash_advance_action" model="ir.actions.act_window">
    <field name="name">Cash Advances</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.cash_advance</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field
                name="context"
            >{'hide_employee': False, 'search_default_dom_draft':1, 'search_default_dom_confirm':1,'search_default_dom_approve':1,'search_default_dom_open':1,'readonly_by_pass': True}</field>
</record>

<menuitem
            id="hr_cash_advance_menu"
            name="Cash Advances"
            parent="employee_cash_advance_root_menu"
            action="hr_cash_advance_action"
            sequence="2"
        />
</data>
